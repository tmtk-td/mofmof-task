<h1>物件閲覧</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<% n = 0 %>
<% @property.nearest_stations.each do |nearest_station| %>
<h3>最寄駅<%= n += 1 %></h3>

<p>
  <strong>路線名:</strong>
  <%= nearest_station.train %>
</p>

<p>
  <strong>駅名:</strong>
  <%= nearest_station.station %>
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= nearest_station.walking_time %>
</p>
<% end %>

<%= link_to '物件編集', edit_property_path(@property) %> |
<%= link_to '一覧に戻る', properties_path %>
